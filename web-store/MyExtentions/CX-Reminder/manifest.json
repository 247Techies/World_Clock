{
  "manifest_version": 3,
  "name": "CX Follow-up Reminder",
  "version": "1.4",
  "description": "A reminder extension for customer follow-ups with countdowns and sound alerts.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "system.display",
    "offscreen"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}