{
  "manifest_version": 3,
  "name": "Unlock Fields",
  "version": "1.1",
  "description": "When clicked, allows all textarea fields on the current page to be resized.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Unlock Textarea Fields",
    "default_icon": {
      "16": "icons/small.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/small.png",
    "48": "icons/small.png",
    "128": "icons/small.png"
  }
}